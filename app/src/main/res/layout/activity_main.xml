<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="21dp"/>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="96dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        android:gravity="center"
        android:layout_marginTop="48dp">
        <TextView
            android:id="@+id/today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/Today"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:textSize="14dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/rounded_rectangle_shape"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/tomorrow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tomorrow"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:background="@drawable/rounded_rectangle_shape"
            android:gravity="center"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/first_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_image_partlycloudy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout1"
        android:layout_marginTop="72dp"
        />
    <TextView
        android:id="@+id/weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sunny"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_image"
        android:layout_marginTop="24dp"
        android:alpha=".72"
        android:textSize="14dp"/>
    <TextView
        android:id="@+id/degree_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_description"
        android:layout_marginTop="24dp"
        android:text="22"
        android:textSize="64sp"
        android:textColor="@color/white"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/degree_number"
        app:layout_constraintTop_toTopOf="@id/degree_number"
        android:layout_marginStart="8dp"
        android:drawableBottom="@drawable/ic_celcius"
        />

    <LinearLayout
        android:id="@+id/min_max_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/degree_number"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        >
        <TextView
            android:id="@+id/max_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24°"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/ic_max_12px"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/min_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18°"
            android:textSize="14sp"
            android:textColor="@color/white"
            app:drawableStartCompat="@drawable/ic_max_12px_copy"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/min_max_layout"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginTop="96dp">

        <TextView
            android:id="@+id/humidity_percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_humidity_24px"
            />
        <TextView
            android:id="@+id/wind"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2 km/h"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            app:drawableTopCompat="@drawable/ic_wind_24px"
            />
        <TextView
            android:id="@+id/precipitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20 mm"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:gravity="center"
            app:drawableTopCompat="@drawable/ic_precipitation_24px"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>